  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "lib LD Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/packages/ld-server",
      "program": "${workspaceFolder}/node_modules/.pnpm/registry.npmjs.org/mocha/7.1.1/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-config",
        "--no-opts",
        "--timeout",
        "0",
        "--forbid-only",
        "false",
        "specs/libldserver.spec.mjs"
      ],
      "env": {
        "NODE_DEBUG": "libldserver"
      }
    }
  ]
}